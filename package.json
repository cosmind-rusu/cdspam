{
  "name": "cdspam",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:api": "tsc -p tsconfig.json",
    "dev:api": "tsx src/server/index.ts",
    "start:api": "node dist/server/index.js",
    "test": "npm run test:unit",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:integration:run": "vitest run tests/integration",
    "test:integration": "firebase emulators:exec --project demo-test --only firestore \"npm run test:integration:run\"",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.0",
    "@google-cloud/firestore": "^7.11.0",
    "fastify": "^4.28.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "firebase-tools": "^13.0.0",
    "tsx": "^4.15.7",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0"
  }
}